<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MaSMAUI.Serial">
    <Border Padding="15" Stroke="White" StrokeShape="RoundRectangle 10">
        <VerticalStackLayout VerticalOptions="Center" Spacing="10">
            <Image Source="https://aka.ms/campus.jpg"></Image>
            <Label HorizontalOptions="Center">Name</Label>
            <Border StrokeShape="RoundRectangle 100">
                <HorizontalStackLayout HorizontalOptions="Fill">
                    <Border StrokeShape="RoundRectangle 100 0 100 0" Stroke="White" HorizontalOptions="Start">
                        <Label FontSize="30">+</Label>
                    </Border>
                    <Label FontSize="30" HorizontalOptions="Center">0</Label>
                    <Label FontSize="30" HorizontalOptions="End">-</Label>
                </HorizontalStackLayout>
            </Border>
        </VerticalStackLayout>
    </Border>
</ContentView>
