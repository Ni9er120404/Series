<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MaSMAUI.Profile"
             Title="Profile">
    <VerticalStackLayout VerticalOptions="Center" Spacing="15">
        <Label 
            Text="Количество потраченных часов"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="Large" />
        <Label 
            x:Name="SpentHours"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="Large" />
        <Button Text="Обновить количество часов" WidthRequest="500" TextColor="Black" Clicked="Refresh_Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>